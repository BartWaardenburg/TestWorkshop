{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": ["flowtype", "react", "jest", "prettier"],
	"settings": {
		"react": {
			"pragma": "h"
		}
	},
	"env": {
		"browser": true,
		"commonjs": true,
		"node": true,
		"amd": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:flowtype/recommended",
		"plugin:react/recommended",
		"prettier"
	]
}
